<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/simple_message_txt"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_bubble_corner"/>

    <TextView
        android:id="@+id/simple_message_txt"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="text"
        android:background="@drawable/message_bubble_background"
        android:text="sdsdsdafsasffasasfsafsfa"
        android:textColor="#000000"
        android:textSize="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>